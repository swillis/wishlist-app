
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <ul>
        <li class="field">
                <%=f.email_field :email , :class =>  'required wide text input' ,:autofocus => true ,:placeholder => "Email"%>
              
        </li>
    </ul>
    <ul>
        <li class="field">
                <%=f.password_field :password , :class =>  'required wide text input' ,:placeholder => "Password"%>
              
        </li>
    </ul>
  
    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
  
     <ul>
            <li>
              <div class="medium primary btn">
                <%= f.submit "Submit" %>
              </div>
            </li>
      </ul>
<% end %>

<%= render "devise/shared/links" %>
