
  <% if @inprogress_wishes.present? %>

    <h3 class='list-title'>Pending Accomplists</h3>

    <div class="pending-lists">

      <% @inprogress_wishes.each do |wish|%>

        <article class="list">
          <div class='list-image'>
            <a href="<%= wish_path(wish.friendly_id)%>">

                <%if wish.image.present?%>
                    <%=image_tag wish.image%>
                <%else%>
                    <%=image_tag 'default_item.png',:style => 'width:140px; height:120px'%>
                <%end%>

            </a>
          </div>
          <div class='list-info'>
            <h4><%= wish.title%></h4>
            <ul>
              <li>Status: <span><%= wish.status%></span></li>
              <li>End date: <span><%= wish.close_date.to_date%></span></li>
          
              <li>Rewards: <span><%=wish.items.count %></span> </li>
            </ul>
          </div>
        </article>
      <%end%>
    </div>
  <%end%>
  
  
  <% if @completed_wishes.present? %>
     <h3 class='list-title'>Completed Accomplists</h3>
    <div class="completed-lists">
      <% @completed_wishes.each do |wish|%>
        <div class="list">
          <div class='list-image'>
           <a href="<%= wish_path(wish.friendly_id)%>">
                <%if wish.image.present?%>
                    <%=image_tag wish.image, :style => 'width:100%; height:120px'%>
                <%else%>
                    <%= image_tag "default_item.png", :style => 'width:100%; height:120px'%>
                <%end%>
             </a>
            </div>
          <h4><%=wish.title%></h4>
          <ul>
            <li>Status: <span><%=wish.status%></span></li>
            <li>Accomplished: <span></span></li>
            <li>Rewards: <span><%=wish.items.count %></span></li>
          </ul>
        </div>
      <%end%>
    </div>
  <%end%>

  